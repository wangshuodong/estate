<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.wangsd.web.dao.HousinginfoMapper">
    <select id="queryParentCustomByCode" parameterType="String" resultType="ParentCustom">
        select s.id, s.`name` from housinginfo s where s.`code` like CONCAT(#{code},'%')
    </select>

    <!-- 查询parent下面的最大code -->
    <select id="selectMaxByParentCode" resultType="string">
        select max(code) from housinginfo d where d.parent_id = #{parentId}
    </select>
</mapper>